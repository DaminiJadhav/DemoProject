<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".file_stro_load_act">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Load"
        android:id="@+id/usertxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:textAppearance="?android:attr/textAppearance"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usereditxtload"
        android:layout_below="@+id/usertxt"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usereditxtload"
        android:text="Load Internal Cache"
        android:layout_centerInParent="true"
        android:id="@+id/int_but1"
        android:onClick="load_internal_cache"
      />

    <Button
        android:id="@+id/ext_but1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/int_but1"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:text="Load External Cache"
        android:onClick="load_external_cache"
        android:padding="18dp"/>

    <Button
        android:id="@+id/ext_but2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ext_but1"

        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:onClick="load_external_private"
        android:text="Load External Private" />

    <Button
        android:id="@+id/ext_but3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ext_but2"
        android:layout_centerInParent="true"
        android:padding="18dp"
        android:layout_marginTop="10dp"
        android:onClick="load_external_public"
        android:text="Load External Public" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ext_but3"
        android:layout_centerInParent="true"
        android:padding="18dp"
        android:onClick="Previous"
        android:layout_margin="10dp"
        android:text="Next" />

</RelativeLayout>